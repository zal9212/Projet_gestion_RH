<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    
    <persistence-unit name="absencesPU" transaction-type="JTA">
        <!-- DataSource configuré dans le serveur -->
        <jta-data-source>java:/gestion_rh_jeeDS</jta-data-source>
        
        <!-- Entités JPA -->
        <class>com.plateforme.absences.entities.TypeAbsence</class>
        <class>com.plateforme.absences.entities.Absence</class>
        <class>com.plateforme.absences.entities.Notification</class>
        
        <properties>
            <!-- Dialecte MySQL/MariaDB -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            
            <!-- Afficher les requêtes SQL (développement) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Ne pas modifier la base (déjà créée) -->
            <property name="hibernate.hbm2ddl.auto" value="none"/>
        </properties>
    </persistence-unit>
</persistence>
